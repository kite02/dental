                    <DataGrid FontSize="15" Grid.Row="0" ItemsSource="{Binding RenderedServices}" AutoGenerateColumns="False" IsReadOnly="True" SelectedIndex="{Binding RenderedServiceIndex,UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Remove this Item" Command="{Binding DeleteItem}"/>
                                <MenuItem Header="Clear Received Items" Command="{Binding ClearItems}" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Tooth" Binding="{Binding Tooth}"/>
                            <DataGridTextColumn Header="Cost" Binding="{Binding Cost,StringFormat=C2,ConverterCulture=en-PH}"/>
                            <DataGridTextColumn Header="Additional" Binding="{Binding Additional,StringFormat=C2,ConverterCulture=en-PH}"/>
                            <DataGridTextColumn Header="Sub Total" Binding="{Binding SubTotal,StringFormat=C2,ConverterCulture=en-PH}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="Red" Background="White" BorderThickness="5">
                            <Grid Height="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Total Cost:" VerticalAlignment="Center" Grid.Column="0" FontSize="15"/>
                                <TextBlock Text="{Binding TotalCost,UpdateSourceTrigger=PropertyChanged,StringFormat=C2,ConverterCulture=en-PH}" VerticalAlignment="Center" Grid.Column="1" FontSize="15"/>
                            </Grid>
                        </Border>
                        <Button  Height="Auto" Grid.Column="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" Command="{Binding AddtoBilling}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Check" />
                                <TextBlock Text="Done" Grid.Column="1" FontSize="15" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </Grid>
                </Grid>
            </GroupBox>
            
        </Grid>
    </Grid>
</UserControl>
